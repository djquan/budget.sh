{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "mix compile",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test project",
      "type": "shell",
      "command": "mix test",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "test buffer",
      "type": "shell",
      "command": "echo -n ${relativeFile} > ${workspaceRoot}/.vscode/TEST_LAST && mix test ${relativeFile}",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ],
      "group": "test"
    },
    {
      "label": "test focused",
      "type": "shell",
      "command": "echo -n ${relativeFile}:${lineNumber} > ${workspaceRoot}/.vscode/TEST_LAST && mix test ${relativeFile}:${lineNumber}",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ],
      "group": "test"
    },
    {
      "label": "test last",
      "command": "mix test (cat ${workspaceRoot}/.vscode/TEST_LAST)",
      "type": "shell",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ],
      "group": "test",
    },
  ]
}